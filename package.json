{
  "name": "lc-bmci-app",
  "productName": "Gestionnaire de Lettres de Change Pro",
  "private": true,
  "version": "1.0.0",
  "description": "Application de gestion de lettres de change",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "IGADOR SAMIRA",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && node launch-electron.js\"",
    "electron:build": "node scripts/create-png-icon.js && vite build && electron-builder --win",
    "electron:build:portable": "node scripts/create-png-icon.js && vite build && electron-builder --win portable",
    "electron:build:installer": "node scripts/create-png-icon.js && vite build && electron-builder --win nsis",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-icons:simple": "node scripts/create-png-icon.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "sonner": "^2.0.7",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^30.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.0.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.igador.lcbmci",
    "productName": "LC Pro",
    "copyright": "Copyright Â© 2026 IGADOR SAMIRA",
    "artifactName": "LC-Pro-Setup-${version}.${ext}",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*.ico",
          "**/*.png"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LC Pro",
      "installerLanguages": [
        "fr"
      ],
      "language": "1036",
      "license": "LICENSE.txt",
      "installerSidebar": null,
      "deleteAppDataOnUninstall": false,
      "menuCategory": "LC Pro"
    },
    "portable": {
      "artifactName": "LC-Pro-Portable-${version}.${ext}"
    }
  }
}
